{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe 生成活动文件",
      "command": "C:\\MinGW\\bin\\g++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "C:\\MinGW\\bin"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "编译器: C:\\MinGW\\bin\\g++.exe"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cpp 生成活动文件",
      "command": "g++",
      "args": ["${file}", "-o", "${fileBasenameNoExtension}.out"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "编译器: /usr/bin/cpp"
    }
  ]
}
